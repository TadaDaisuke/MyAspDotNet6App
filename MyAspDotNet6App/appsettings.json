{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%APPDATA%\\MyAspDotNet6App\\log_.txt",
          "outputTemplate": "{Timestamp:s} [{Level:u3}] ({UserName}) {SourceContext} - {Message}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MyDatabaseConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=MyDatabase;Trusted_Connection=True;Trust Server Certificate=true"
  }
}
