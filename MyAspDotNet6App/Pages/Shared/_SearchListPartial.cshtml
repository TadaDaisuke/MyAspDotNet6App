@{
    var cols = ViewData["ListColumns"] as List<Tuple<string, string?>>;
}
<div class="row mt-2">
    <div class="d-flex flex-row">
        <button id="searchButton" class="btn btn-primary">
            <i class="bi bi-search"></i> 検索
        </button>
        <button id="clearButton" class="btn btn-primary ms-2">
            <i class="bi bi-eraser-fill"></i> クリア
        </button>
    </div>
</div>
<table class="table table-hover mt-2">
    <thead class="sticky-top bg-white">
        <tr class="border-bottom-0">
            <td id="resultMessage" colspan="@cols?.Count" class="border-bottom-0"></td>
        </tr>
        <tr id="tableHeader" class="d-none align-baseline">
            @foreach (var col in cols.OrEmptyIfNull())
            {
                if (col.Item2 == null)
                {
                    <th>@col.Item1</th>
                }
                else
                {
                    <th>@col.Item1 <button class="btn btn-sort" data-sort-item="@col.Item2"><i class="bi bi-arrow-down-up"></i></button></th>
                }
            }
        </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
</table>
<div id="tableLoading" class="text-center d-none">
    <div class="spinner-border text-secondary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<div id="scrollToTopButton" class="btn btn-primary btn-to-top d-none"><i class="bi bi-caret-up-fill"></i></div>
